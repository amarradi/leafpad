<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.MyToolbarTitle</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.MyToolbarSubtitle</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="CustomToolbarStyleEdit" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.MyToolbarTitleEdit</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.MyToolbarSubtitleEdit</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="TextAppearance.MyToolbarTitleEdit" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/opensans_medium</item>
        <item name="android:textSize">@dimen/textSize_MyToolbarTitleEdit</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>

    <style name="TextAppearance.MyToolbarSubtitleEdit" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/opensans_medium</item>
        <item name="android:textSize">@dimen/textSize_MyToolbarSubtitleEdit</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_emeraldTint</item>
    </style>



    <style name="TextAppearance.MyToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/opensans_medium</item>
        <item name="android:textSize">@dimen/textSize_MyToolbarTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>

    <style name="TextAppearance.MyToolbarSubtitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/opensans_medium</item>
        <item name="android:textSize">@dimen/textSize_MyToolbarSubtitle</item>
        <item name="android:textColor">@color/md_theme_emeraldTint</item>
    </style>

    <style name="TextAppearance.MyNoteItem" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/textSize_MyNoteItem</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/opensans_medium</item>
    </style>

    <style name="TextAppearance.MyNotePreview" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/textSize_MyNotePreview</item>
        <item name="android:textColor">@color/previewTextColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/opensans_medium</item>
    </style>

    <style name="TextAppearance.MyDateTime" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/textSize_MyDateTime</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/opensans_medium</item>
    </style>
    <style name="TextAppearance.MyCategoryText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/textSize_MyCategory</item>
        <item name="android:textColor">@color/md_theme_recipe</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" >@font/opensans_medium</item>
    </style>

    <!-- Custom style fÃ¼r MaterialCardView -->
    <style name="CustomCardViewStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="strokeColor">@color/md_theme_primaryContainer</item>

        <item name="cardCornerRadius">@dimen/cornerRadiusCardElement</item>
        <item name="cardElevation">@dimen/cardElevation</item>
        <item name="strokeWidth">@dimen/strokeWidth</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="android:background">@color/md_theme_cardBackground</item>
        <item name="colorSurface">@color/md_theme_surface</item>
        <item name="colorSecondary">@color/md_theme_onSurface</item>
    </style>
    <style name="TextAppearance.MyAboutPage" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" >@font/opensans_medium</item>
    </style>

    <style name="TextAppearance.MyAboutPageTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" >@font/opensans_medium</item>
    </style>
    <style name="ThemeOverlay.App.Preference" parent="PreferenceThemeOverlay">
        <item name="switchPreferenceCompatStyle">@style/PreferenceMaterialSwitch</item>
    </style>

    <style name="PreferenceMaterialSwitch" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="android:widgetLayout">@layout/preference_widget_switch_compat</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.toolbar" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Color Primary -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <!-- Color Secondary -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <!-- Color Accent -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorAccent">@color/seed</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.App.TitleLarge</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:enforceStatusBarContrast">true</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="navigationIconTint">@color/md_theme_light_onPrimary</item>
        <item name="android:colorControlNormal">@color/md_theme_light_onPrimary</item>
        <item name="colorControlNormal">@color/md_theme_light_onPrimary</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="textAppearanceTitleMedium">@style/titleTextAppearanceTitleMedium</item>
        <!-- Fonts -->
        <item name="android:fontFamily">@font/opensans_regular</item>
        <!-- TextInput Style-->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <!-- FloatingActionButton -->
        <item name="extendedFloatingActionButtonStyle">
            @style/Widget.Material3.ExtendedFloatingActionButton.Primary
        </item>
    </style>

</resources>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="PrivateResource">

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="android:paddingStart">@dimen/margin</item>
        <item name="android:paddingEnd">@dimen/margin</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">?attr/colorAccent</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="android:cursorVisible">true</item>
        <item name="colorControlHighlight">@color/seed</item>
        <item name="hintTextColor">?attr/colorAccent</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="textAppearanceCaption">@color/md_theme_light_primary</item>
        <item name="editTextStyle">@style/Widget.Material3.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="editTextStyle" parent="@style/Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="color">@color/seed</item>
        <item name="colorSurface">@color/seed</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.App.SubTitleText</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius</item>
    </style>

    <style name="Widget.Material3.ExtendedFloatingActionButton.Primary" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.SmallComponent</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorContainer">@color/md_theme_light_primary</item>
        <item name="colorOnContainer">@color/md_theme_light_onPrimary</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <item name="android:background">@color/md_theme_light_primary</item>
        <item name="android:fillColor">@color/md_theme_light_onPrimary</item>
        <item name="titleTextColor">@color/md_theme_light_onPrimary</item>
        <item name="navigationIconTint">@color/md_theme_light_onPrimary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.TitleLarge</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="android:subtitleTextStyle">@style/TextAppearance.App.SubTitleText</item>
    </style>

    <style name="TextAppearance.App.SubTitleText" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextAppearance.App.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <!-- Preference Screen -->
    <style name="AppPreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">

        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surface</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>



    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="android:background">@color/md_theme_light_surface</item>
        <item name="colorSecondary">@color/md_theme_light_onSurface</item>
        <item name="colorSurface">@color/md_theme_light_background</item>
        <item name="android:padding">@dimen/margin</item>
    </style>

    <style name="Theme.App.toolbar" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Color Primary -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <!-- Color Secondary -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <!-- Color Accent -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorAccent">@color/seed</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.App.TitleLarge</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="navigationIconTint">@color/md_theme_light_onPrimary</item>
        <item name="android:colorControlNormal">@color/md_theme_light_onPrimary</item>
        <item name="colorControlNormal">@color/md_theme_light_onPrimary</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="textAppearanceTitleMedium">@style/titleTextAppearanceTitleMedium</item>
        <!-- Fonts -->
        <item name="android:fontFamily">@font/opensans_regular</item>
        <!-- TextInput Style-->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <!-- FloatingActionButton -->
        <item name="extendedFloatingActionButtonStyle">@style/Widget.Material3.ExtendedFloatingActionButton.Primary</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="tint">@color/md_theme_light_onPrimary</item>
        <item name="android:paddingRight">@dimen/toolbarPaddingRight</item>
        <item name="android:paddingLeft">@dimen/toolbarPaddingLeft</item>
    </style>

    <style name="titleTextAppearanceTitleMedium" parent="TextAppearance.App.SubTitleText">
        <item name="android:textColor">@color/md_theme_dark_primaryContainer</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listElement">
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/listElementTitle</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/md_theme_light_primary</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/md_theme_light_primary</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"



    tools:context="com.git.amarradi.leafpad.NoteReadActivity"
    tools:showIn="@layout/activity_read">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/readTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_regular"
            android:labelFor="@id/readTitle"
            android:text="@string/title_hint"
            android:textAppearance="?android:textAppearanceLarge" />

        <EditText
            android:id="@+id/readNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:autofillHints="name"
            android:fontFamily="@font/opensans_regular"
            android:inputType="none"

            android:labelFor="@id/readNote"
            android:text="@string/body_hint" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>